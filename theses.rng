<?xml version="1.0" encoding="UTF-8"?>
<grammar ns="http://www.tei-c.org/ns/1.0" xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <start>
    <element name="TEI">
      <attribute>
        <name ns="http://www.w3.org/XML/1998/namespace">lang</name>
        <data type="NCName"/>
      </attribute>
      <element name="teiHeader">
        <element name="fileDesc">
          <element name="titleStmt">
            <ref name="title"/>
            <element name="author">
              <attribute name="ref">
                <data type="anyURI"/>
              </attribute>
              <data type="NCName"/>
            </element>
          </element>
          <element name="editionStmt">
            <element name="edition">
              <text/>
            </element>
          </element>
          <element name="publicationStmt">
            <ref name="publisher"/>
            <element name="date">
              <attribute name="when">
                <data type="integer"/>
              </attribute>
            </element>
            <element name="availability">
              <attribute name="status">
                <data type="NCName"/>
              </attribute>
              <element name="licence">
                <attribute name="target">
                  <data type="anyURI"/>
                </attribute>
              </element>
            </element>
          </element>
          <element name="seriesStmt">
            <ref name="title"/>
            <oneOrMore>
              <element name="idno">
                <attribute name="type">
                  <data type="NCName"/>
                </attribute>
                <data type="anyURI"/>
              </element>
            </oneOrMore>
          </element>
          <element name="sourceDesc">
            <ref name="bibl"/>
          </element>
        </element>
        <element name="encodingDesc">
          <element name="refsDecl">
            <attribute name="n">
              <data type="NCName"/>
            </attribute>
            <oneOrMore>
              <element name="cRefPattern">
                <attribute name="matchPattern"/>
                <attribute name="n">
                  <data type="NCName"/>
                </attribute>
                <attribute name="replacementPattern"/>
                <ref name="p"/>
              </element>
            </oneOrMore>
          </element>
        </element>
        <element name="profileDesc">
          <element name="langUsage">
            <element name="language">
              <attribute name="ident">
                <data type="NCName"/>
              </attribute>
            </element>
          </element>
        </element>
        <element name="revisionDesc">
          <oneOrMore>
            <element name="change">
              <attribute name="when">
                <data type="date"/>
              </attribute>
              <attribute name="who"/>
              <text/>
            </element>
          </oneOrMore>
        </element>
      </element>
      <element name="text">
        <attribute>
          <name ns="http://www.w3.org/XML/1998/namespace">base</name>
          <data type="anyURI"/>
        </attribute>
        <attribute>
          <name ns="http://www.w3.org/XML/1998/namespace">lang</name>
          <data type="NCName"/>
        </attribute>
        <element name="body">
          <element name="byline">
            <element name="docAuthor">
              <element name="forename">
                <data type="NCName"/>
              </element>
              <element name="surname">
                <data type="NCName"/>
              </element>
            </element>
          </element>
          <oneOrMore>
            <ref name="div"/>
          </oneOrMore>
        </element>
      </element>
    </element>
  </start>
  <define name="title">
    <element name="title">
      <optional>
        <attribute name="ref">
          <data type="anyURI"/>
        </attribute>
      </optional>
      <optional>
        <attribute name="type">
          <data type="NCName"/>
        </attribute>
      </optional>
      <oneOrMore>
        <choice>
          <text/>
          <ref name="publisher"/>
          <element name="biblScope">
            <attribute name="unit">
              <data type="NCName"/>
            </attribute>
            <data type="NCName"/>
          </element>
          <element name="pubPlace">
            <data type="NCName"/>
          </element>
        </choice>
      </oneOrMore>
    </element>
  </define>
  <define name="publisher">
    <element name="publisher">
      <text/>
    </element>
  </define>
  <define name="bibl">
    <element name="bibl">
      <zeroOrMore>
        <choice>
          <ref name="title"/>
          <element name="relatedItem">
            <attribute name="type">
              <data type="NCName"/>
            </attribute>
            <ref name="bibl"/>
          </element>
        </choice>
      </zeroOrMore>
    </element>
  </define>
  <define name="p">
    <element name="p">
      <oneOrMore>
        <choice>
          <text/>
          <ref name="hi"/>
          <element name="num">
            <oneOrMore>
              <choice>
                <text/>
                <ref name="hi"/>
              </choice>
            </oneOrMore>
          </element>
        </choice>
      </oneOrMore>
    </element>
  </define>
  <define name="div">
    <element name="div">
      <attribute name="n">
        <data type="integer"/>
      </attribute>
      <attribute name="type"/>
      <optional>
        <oneOrMore>
          <choice>
            <ref name="div"/>
            <element name="head">
              <oneOrMore>
                <choice>
                  <text/>
                  <element name="lb">
                    <empty/>
                  </element>
                </choice>
              </oneOrMore>
            </element>
          </choice>
        </oneOrMore>
        <zeroOrMore>
          <ref name="p"/>
        </zeroOrMore>
      </optional>
    </element>
  </define>
  <define name="hi">
    <element name="hi">
      <attribute name="rend">
        <data type="NCName"/>
      </attribute>
      <text/>
    </element>
  </define>
</grammar>
